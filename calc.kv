<Cbtn>:
    font_size : self.get_size()
    background_normal : ""
    background_down : ""
    background_color : (0.12,0.12,0.12,1) if self.state == "normal" else (0.2,0.2,0.2,1)
    color : 1,0.2,0.2,1
            
            
            
            
            
<Calculater>:
    
    label : lbl
    
    Label:
        canvas.before:
            Color:
                rgba : 0.15,0.15,0.15,1
                
            Rectangle:
                size : self.size
                pos : self.pos
        id : lbl
        text : "0"
        text_size : self.size
        pos : root.x , root.height*0.7
        size : root.width , root.height*0.3
        halign : "right"
        valign : "middle"
        font_size : root.get_size()
        color : 1,1,1,1
        
    
    BoxLayout:
        pos : root.pos
        size : root.width , root.height*0.7
        orientation : "horizontal"
    
        BoxLayout:
            orientation : 'vertical'
      
            Cbtn:
                text : "7"
                on_release : root.numeric("7")
            
            Cbtn:
                text : "4"
                on_release : root.numeric("4")
        
            Cbtn:
                text : "1"
                on_release : root.numeric("1")
            
            Cbtn:
                text : "0"
                on_release : root.numeric("0")
            
            
        BoxLayout:
            orientation : 'vertical'
      
            Cbtn:
                text : "8"
                on_release : root.numeric("8")
            
            Cbtn:
                text : "5"
                on_release : root.numeric("5")
        
            Cbtn:
                text : "2"
                on_release : root.numeric("2")
            
            Cbtn:
                text : "."
                on_release : root.no_dot()
            
            
            
        BoxLayout:
            orientation : 'vertical'
      
            Cbtn:
                text : "9"
                on_release : root.numeric("9")
            
            Cbtn:
                text : "6"
                on_release : root.numeric("6")
        
            Cbtn:
                text : "3"
                on_release : root.numeric("3")
            
            Cbtn:
                text : "="
                on_release : root.equal()
                
            
   
        BoxLayout:
            padding : 3 , 0 , 0 , 0
            orientation : 'vertical'
      
            Cbtn:
                text : "C"
                color : 0.2,0.6,1,1
                on_release : root.clear()
            
            Cbtn:
                text : "/"
                color : 0.2,0.6,1,1
                on_release : root.operator("/")
        
            Cbtn:
                text : "×"
                color : 0.2,0.6,1,1
                on_release : root.operator("×")
            
            Cbtn:
                text : "-"
                color : 0.2,0.6,1,1
                on_release : root.operator("-")
            
            Cbtn:
                text : "+"
                color : 0.2,0.6,1,1
                on_release : root.operator("+")